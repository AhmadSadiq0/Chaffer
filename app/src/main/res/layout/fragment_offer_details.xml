<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/time_text"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text=" Delivery time: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />





    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/margin_top"
        android:id="@+id/card_view_description"
        android:layout_below="@id/time_text"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text=" Project description:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editText_description"
        android:layout_below="@+id/text_description"
        android:layout_width="match_parent"
        android:maxLines="5"
        android:textColor="@color/colorAccent"
        android:hint="Offer description here"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/margin_top"
        android:id="@+id/card_view_locationDescription"
        android:layout_below="@id/card_view_description"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/text_location_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text=" Location description:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editText_location_description"
                android:layout_below="@+id/text_location_description"
                android:layout_width="match_parent"
                android:textColor="@color/colorAccent"
                android:maxLines="5"
                android:hint="Location description here"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>





    <Button
        android:id="@+id/view_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Locations"
        android:layout_marginTop="@dimen/margin_top"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>