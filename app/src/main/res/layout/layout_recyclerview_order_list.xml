<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/cardview_shadow_end_color"
    android:padding="5dp"
    android:id="@+id/parent_layout">

    <android.support.v7.widget.CardView
        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_image"
                android:layout_width="50dp"
                android:layout_margin="5dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/logo" />


            <TextView
                android:id="@+id/receiver_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/user_image"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/user_image"
                android:layout_toRightOf="@+id/user_image"
                android:text="User name here"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/receiver_user_name"
                android:layout_alignStart="@+id/receiver_user_name"
                android:layout_below="@+id/receiver_user_name"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@+id/pick_up_location"
                android:layout_toStartOf="@+id/pick_up_location"
                android:maxLines="1"
                android:text="Order description" />




        </RelativeLayout>

    </android.support.v7.widget.CardView>







</RelativeLayout>